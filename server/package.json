{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    
    "module": "CommonJS", 
    "target": "ES2020",
    
    "esModuleInterop": true,
    "strict": true,
    
    "allowJs": true,
    "declaration": false,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
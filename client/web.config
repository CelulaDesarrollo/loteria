<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- 
        Configuración para servir una aplicación Next.js exportada estáticamente en IIS.
        Esta es la carpeta 'out' generada por: npm run build (con output: 'export' en next.config.ts)
        -->

        <!-- HTTPS Redirect: Forzar HTTPS para seguridad -->
        <rewrite>
            <rules>
                <rule name="Force HTTPS" stopProcessing="true">
                    <match url=".*" />
                    <conditions>
                        <add input="{HTTPS}" pattern="^OFF$" />
                        <add input="{HTTP_HOST}" pattern="^localhost" negate="true" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>

        <!-- Gzip compression settings para mejor performance -->
        <httpCompression directory="%SystemDrive%\inetpub\temp\IIS Temporary Compressed Files" dynamicCompressionBeforeCache="true">
            <scheme name="gzip" dll="%Windir%\system32\inetsrv\gzip.dll" staticCompressionLevel="9" />
            <dynamicTypes>
                <add mimeType="text/html" enabled="true" />
                <add mimeType="text/plain" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="application/x-javascript" enabled="true" />
            </dynamicTypes>
            <staticTypes>
                <add mimeType="text/html" enabled="true" />
                <add mimeType="text/plain" enabled="true" />
                <add mimeType="application/json" enabled="true" />
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="application/x-javascript" enabled="true" />
                <add mimeType="*/*" enabled="false" />
            </staticTypes>
        </httpCompression>

        <!-- Static file caching - archivos de Next.js optimizados para caché largo plazo -->
        <staticContent>
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
        </staticContent>

        <!-- URL REWRITE RULES: Enrutamiento SPA para Next.js exportado -->
        <rewrite>
            <rules>
                <!-- Regla 1: Archivos estáticos de Next.js (_next/*) -->
                <rule name="NextJS Assets" stopProcessing="true">
                    <match url="^_next/" />
                    <action type="None" />
                </rule>

                <!-- Regla 2: Archivos públicos (public/*) -->
                <rule name="Public Files" stopProcessing="true">
                    <match url="^(.*)\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$" />
                    <action type="None" />
                </rule>

                <!-- Regla 3: Rutas dinámicas - Reescribir a index.html para SPA routing -->
                <rule name="SPA Catch-All" stopProcessing="true">
                    <match url="^(.*)$" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.html" />
                </rule>
            </rules>
        </rewrite>

        <!-- Headers de seguridad -->
        <httpProtocol>
            <customHeaders>
                <!-- Prevenir MIME type sniffing -->
                <add name="X-Content-Type-Options" value="nosniff" />
                <!-- Clickjacking protection -->
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <!-- XSS Protection -->
                <add name="X-XSS-Protection" value="1; mode=block" />
                <!-- CSP Header para mayor seguridad -->
                <add name="Content-Security-Policy" value="default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' https:;" />
                <!-- Referrer Policy -->
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Documento por defecto -->
        <defaultDocument enabled="true">
            <files>
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>

        <!-- Manejo de errores comunes -->
        <httpErrors>
            <!-- Redirigir 404 a index.html para rutas dinámicas -->
            <error statusCode="404" subStatusCode="-1" path="index.html" responseMode="ExecuteURL" />
        </httpErrors>
    </system.webServer>
</configuration>